{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season {{ season.id }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Programe Id</th>
                <td>{{ season.program.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    <strong>Episodes :</strong>
    <ul>
        {% for episode in season.episodes %}
                    <li>
                        {{ episode.title }} <br>
                        ID : {{ episode.id }} <br>
                        <a href="{{ path('episode_show', {slug: episode.slug} )}}"> Voir fiche</a>
                    </li>
                    {% else %}
                    <p>Aucun Ã©pisode</p>
        {% endfor %}
    </ul>
    <a href="{{ path('season_index') }}">back to list</a>
    <a href="{{ path('season_edit', {id: season.id}) }}"> edit </a>
    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
