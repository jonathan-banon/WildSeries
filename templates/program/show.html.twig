{% extends 'base.html.twig' %}
{% block title %}Programs {{ program.id }}{% endblock %}
{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="img {{ program.title }}">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Cat√©gorie : {{ program.category.name }}</p>
            <ul> Saison(s)
                {% for season in seasons %}
                    <li>
                        <a href="{{ path("program_season_show", { program: program.id, season: season.id}) }}">Saison {{ season.id }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <a href="{{ path('program_index') }}">
        Program list
    </a>
{% endblock %}
