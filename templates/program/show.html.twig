{% extends 'base.html.twig' %}
{% block title %}Programs {{ program.id }}{% endblock %}
{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="img {{ program.title }}">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Category : {{ program.category.name }}</p>
        </div>
    </div>
    <strong>Season :</strong>
    <ul>
        {% for season in program.seasons %}
            <li>
                <a href="{{ path("season_show", {'id': season.id}) }}">Season {{ season.id }}</a>
            </li>
        {% else %}
            <p>aucun saison dispo</p>
        {% endfor %}
    </ul>
    <strong>Actor :</strong>
    <ul>
        {% for actor in program.actors %}
            <li>
                <a href="{{ path("actor_show", {'id': actor.id}) }}"> {{ actor.name }} </a>
            </li>
        {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
        {% endfor %}
    </ul>
    <a href="{{ path('program_index') }}">
        Program list
    </a>
{% endblock %}
